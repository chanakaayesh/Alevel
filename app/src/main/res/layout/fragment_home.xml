<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"

    tools:context=".ui.home.HomeFragment">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_marginLeft="@dimen/marg_lft_rght"
        android:layout_marginRight="@dimen/marg_lft_rght"
        android:background="@color/secondbackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="56%"
        android:layout_centerInParent="true"
        >

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_heightPercent="1%"
            />
        <ImageView

            android:id="@+id/maths_b"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="39%"
            app:layout_widthPercent="48%"
            android:background="@drawable/maths"

            />
        <TextView
            android:background="@color/textField"
            android:id="@+id/t1"
            android:layout_below="@id/maths_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_heightPercent="8%"
            app:layout_widthPercent="48%"


            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Maths"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat"

            />
        <Space
            android:id="@+id/s1"
            android:layout_below="@id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_heightPercent="4%"
            />

        <ImageView
            android:id="@+id/bio_b"
            android:layout_alignParentRight="true"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="39%"
            app:layout_widthPercent="48%"
            android:background="@drawable/biosciences"
            />
        <TextView
            android:background="@color/textField"
            android:id="@+id/t2"
            android:layout_below="@id/maths_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            app:layout_heightPercent="8%"
            app:layout_widthPercent="48%"


            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Bio"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />

        <ImageView
            android:id="@+id/commers_b"
            android:background="@drawable/commerce"
            android:layout_above="@id/t3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="39%"
            app:layout_widthPercent="48%"/>
        <TextView
            android:id="@+id/t3"
            android:background="@color/textField"
            android:layout_above="@id/s3"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_heightPercent="8%"
            app:layout_widthPercent="48%"


            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Commers"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />
        <Space
            android:id="@+id/s3"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_heightPercent="1%"
            />

        <ImageView
            android:id="@+id/art_b"
            android:background="@drawable/art"
            android:layout_alignParentRight="true"
            android:layout_above="@id/t4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="39%"
            app:layout_widthPercent="48%"/>
        <TextView
            android:id="@+id/t4"
            android:background="@color/textField"
            android:layout_alignParentRight="true"
            android:layout_above="@id/s3"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_heightPercent="8%"
            app:layout_widthPercent="48%"


            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Commers"
            android:gravity="center_vertical"
            tools:ignore="RtlCompat" />
        <Space
            android:layout_alignParentRight="true"
            android:id="@+id/s4"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_heightPercent="1%"
            />

    </androidx.percentlayout.widget.PercentRelativeLayout>


</androidx.percentlayout.widget.PercentRelativeLayout>